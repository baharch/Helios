<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:orientation="vertical"
        android:background="@drawable/bg"
        tools:context="org.bahar.helios.WeatherActivity">
    <LinearLayout
        android:id="@+id/activitysetting_LinearLayout_selecteditems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/ShadowBG"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/activitysetting_TextView_selectedCity"
            android:layout_width="wrap_content"
            android:text="@string/selected_lable"
            android:layout_margin="8dp"
            android:textColor="@color/WhiteText"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/DarkText"/>

           <GridView
            android:id="@+id/activitySetting_ListView_CityList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchMode="columnWidth"
            android:numColumns="auto_fit"
            android:listSelector="@color/DarkText"
            android:gravity="center"
            android:columnWidth="100dp"/>
    </LinearLayout>